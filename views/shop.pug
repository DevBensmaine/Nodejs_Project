extends ./layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/main.css", attr)
    link(rel="stylesheet", href="/css/product.css", attr)
block content
      if prods.length > 0
        .grid
            each product in prods
              article.card.product-item
                header.card__header
                  h1.product__title #{product.title}
                div.card__image
                  img(src="https://images-na.ssl-images-amazon.com/images/I/51GWcXEVkCL._SX419_BO1,204,203,200_.jpg")
                div.card__content
                  h2.product__price 100 Dh
                  p.product__description e Lorem Ipsum est simplement du faux texte employ√© dans la composition
                .card__actions
                  button.btn Add to Cart
      else 
        h1 No Product